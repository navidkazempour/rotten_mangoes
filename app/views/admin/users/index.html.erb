<%= paginate @users %>
<%= link_to "Create new user", new_user_path %>

<table>
<h1>All Users</h1>
  
  <thead>
    <tr>
      <th>Full name</th>
      <th>Username</th>
      <th>Admin status</th>
      <th>Make changes</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.full_name %>
    </td>
    <td>
      <%= user.email %>
    </td>
    <td>
      <%= user.admin %>
    </td>
    <td>
      <%= link_to "edit",  edit_admin_user_path(user) %> | 
      <%= link_to "delete", admin_user_path(user), method: :delete, data: { confirm: "You sure?"} %>
    </td>
  </tr>
  <% end %>
</table>


